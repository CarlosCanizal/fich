  body
    .loading-layer(data-ng-show="shell.loading")
      .spinner
        .bounce1
        .bounce2
        .bounce3
    ui-view
    .alert-bar
      .alert.alert-danger(role="alert", data-ng-if="shell.errorMessage")
        button.close(type="button",data-dismiss="alert",aria-label="Close", data-ng-click="shell.errorMessage = false")
          span(aria-hidden="true")
            |&times;
        |{{shell.errorMessage}}
      .alert.alert-success(role="alert", data-ng-if="shell.successMessage")
        button.close(type="button",data-dismiss="alert",aria-label="Close", data-ng-click="shell.successMessage = false")
          span(aria-hidden="true")
            |&times;
        |{{shell.successMessage}}

